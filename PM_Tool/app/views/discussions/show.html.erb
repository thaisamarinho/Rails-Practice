<h1>Discussions</h1>

<h2><%= @discussion.title %></h2>
<p><%= @discussion.body %></p>

<br>
<br>

    <%= form_for [@project, @discussion, @comment] do |f| %>

      <div>
        <%= f.text_area :body%>
      </div>
      <br>
      <div>
      <%= f.submit%>
      </div>
    <% end %>
  <br>

  <h3>Comments</h3>

<% @discussion.comments.each do |comment| %>
  <p><%= comment.body %></p>
  <hr>
    <%= link_to "Edit", edit_project_discussion_comment_path(@project, @discussion, comment)%>
  <%= link_to 'Delete', project_discussion_comment_path(@project, @discussion, comment), method: :delete, data: { confirm: 'Are you sure?'} %>
<% end %>
